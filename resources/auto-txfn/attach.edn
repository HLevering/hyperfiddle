(fn [ctx multi-color-tx modal-route]
  (let [[_ [{entity-id :db/id}]] modal-route                ; e.g. table-cell value or form-field value
        parent-id (:db/id @(get-in ctx [:hypercrud.browser/parent :hypercrud.browser/data])) ; e.g. table-row entity or form entity
        attr (last (:hypercrud.browser/path ctx))]
    {:tx {(hypercrud.browser.context/uri ctx)
          [[:db/add parent-id attr entity-id]]}}))